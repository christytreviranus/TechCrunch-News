{{> navs/saved}}

<div id="articles">
    {{#if articles}}
        {{#each articles}}

            <div class="card" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title"><a href="{{this.link}}">{{this.title}}</a></h5>
                <div>
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#{{this.id}}">
                    Add a Note
                    </button>
                </div>
                <form action="/api/articles/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete Article<br>
                </form>
                </div>
            </div>
            {{> content/modal}}
            
        {{/each}}
    {{else}}
        <div class="well">
            <h4>Oops! You don't have any saved articles yet!  Go ahead and save one!</h4>
        </div>
    {{/if}}
</div>

<div class="modal fade" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="notesModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Note For: {{this.title}}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                {{#if this.notes}}
                    {{#each this.notes}}
                        <div class="well">
                            <div class="row">
                                <div class="col col-md-10">
                                    <p>{{this.text}}</p>
                                </div>
                                <div class="col col-md-2">
                                    <form class="form-inline" action="/api/notes/{{this.id}}?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger"> X </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                        <div class="well">
                            <p>Oh no! This article doesn't have any notes.  Go ahead and add one!</p>
                        </div>
                {{/if}}
            </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <form class="form-inline" action="/api/notes/{{this.id}}" method="POST">
            <input type="text" class="form-control" id="text" name="text" placeholder="Add a new note here...">
            <button type="submit" class="btn btn-info">Save Note</button>
        </form>
      </div>
    </div>
  </div>
</div>

